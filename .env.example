# Supabase Configuration
VITE_SUPABASE_PROJECT_ID=your_project_id
VITE_SUPABASE_URL=https://your_project_id.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_public_key

# Invoice App v2.0 Environment Variables

# Application
VITE_APP_NAME=Invoice App v2.0
VITE_APP_VERSION=2.0.0

# API Configuration (Update these for production)
VITE_API_URL=http://localhost:5001/api
VITE_API_TIMEOUT=30000

# Authentication (Update for production)
VITE_AUTH_ENABLED=false
VITE_AUTH_BASE_URL=http://localhost:5001

# Feature Flags
VITE_ENABLE_PDF_EXPORT=true
VITE_ENABLE_NOTIFICATIONS=true

# Environment
VITE_ENVIRONMENT=development

# Backend Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration (Add your database connection string)
# DATABASE_URL=mongodb://localhost:27017/invoice-app
# or
# DATABASE_URL=postgresql://user:password@localhost:5432/invoice_app

# Better Auth Configuration
BETTER_AUTH_URL=http://localhost:5001
BETTER_AUTH_SECRET=your-super-secret-change-in-production

# Google OAuth (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT Authentication (Generate secure secrets for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Email Configuration (Optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Invoice Configuration
COMPANY_NAME=Intelligent Business Platforms
COMPANY_ADDRESS=12020 Sunrise Valley Dr. Reston, VA, 20191
COMPANY_COUNTRY=United States
INVOICE_DUE_DAYS=15
INVOICE_CURRENCY=USD

